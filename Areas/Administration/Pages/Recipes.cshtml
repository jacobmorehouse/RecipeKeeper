@page
@using RecipeKeeper.Data.Models;
@model RecipeKeeper.Areas.Administration.Pages.RecipesModel
@{
	var db = new thisDb();
}
<h1>Recipe</h1>
<hr />

<a asp-area="administration" asp-page="/addRecipe">Add</a>

<table class="table">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Description</th>
		<th></th>
	</tr>

	@foreach (Recipe i in db.Recipe.ToList())
	{
		
		<tr>
			<td>@i.Id</td>
			<td>@i.Name</td>
			<td>@i.Description</td>
			<td>
				<form method="post">
					<input type="hidden" value="@i.Id" name="recipeId" />
					<button asp-page-handler="delete" type="submit" class="btn btn-danger">Delete</button>
				</form>
			</td>
		</tr>
	}
</table>