@page "{IngredientCategoryID}"
@model RecipeKeeper.Areas.Administration.Pages.EditIngredientCategoryModel
@{
}

<h1>Ingredient Categories - Edit</h1>
<hr />
<div class="row">
	<div class="col-md-6">
		<form method="post">
			<input type="hidden" asp-for="thisCategory.Id" />
			<div asp-validation-summary="All"></div>
			<div class="mb-3">
				<label class="form-label">Name</label>
				<input type="text" asp-for="thisCategory.Name" class="form-control" />
				<span asp-validation-for="thisCategory.Name"></span>
			</div>
			<button type="submit" class="btn btn-success">Save</button>

		</form>
	</div>
</div>